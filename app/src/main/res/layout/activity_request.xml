<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RequestActivity">


    <TextView
        android:id="@+id/appointment_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/created_by_user_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/appointment_request"
        app:layout_constraintStart_toStartOf="@+id/appointment_request" />

    <TextView
        android:id="@+id/timestamp_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/created_by_user_request"
        app:layout_constraintEnd_toEndOf="@+id/created_by_user_request" />

    <Button
        android:id="@+id/request_for_appointment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request For Appointment"
        android:layout_marginTop="340dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>